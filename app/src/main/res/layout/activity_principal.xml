<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marcosoft.proyectofinal.PrincipalActivity2">
    <!--tools:showIn="@layout/app_bar_principal"-->

    <ScrollView
        android:id="@+id/principal_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/line_pricipal_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">
            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="DENUNCIAS"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/btnDenunciaLuminotecnia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="LUMINOTECNIA"
                android:drawableLeft="@drawable/luminica128x128"
                android:layout_marginTop="32dp"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <Button
                android:id="@+id/btnDenunciaBache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="BACHES"
                android:drawableLeft="@drawable/bache128x128"
                android:layout_marginTop="32dp"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <Button
                android:id="@+id/btnDenunciaBasural"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="BASURAL"
                android:drawableLeft="@drawable/residuos128x128"
                android:layout_marginTop="32dp"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/btnPortal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="PORTAL"
                android:drawableLeft="@drawable/portal128x128"
                android:layout_marginTop="32dp"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <Button
                android:id="@+id/btnNumerosUtiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="Números Útiles"
                android:drawableLeft="@drawable/numerosutiles128x128"
                android:layout_marginTop="32dp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
